<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>ログイン</h2>

      <%= form_with model: @user, url: user_session_path do |f| %>

        <div class="mt-3 field">
          <%= f.label :表示名（サイト内で表示されるハンドルネームです） %><br />
          <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name" %>
        </div>

        <div class="mt-3 field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :次回からパスワードを入力しない %>
          </div>
        <% end %>

        <div class="mt-3 actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>
