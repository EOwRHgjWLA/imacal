<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>新規登録</h2>

      <%= form_with model: @user, url: user_registration_path do |f| %>

        <%= render "users/shared/error_messages", resource: resource %>

        <div class="mt-3 field">
          <%= f.label :名前（仮名で構いません） %><br>
          <%= f.text_field :name %>
        </div>

        <div class="mt-3 field">
          <%= f.label :表示名（サイト内で表示されるハンドルネームです） %><br />
          <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name" %>
        </div>

        <div class="mt-3 field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <a>(<%= @minimum_password_length %> 文字以上で入力してください)<a>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="mt-3 field">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="mt-3 actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>
